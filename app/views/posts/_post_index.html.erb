<% posts.each do |post| %>
	<div class="row post-list">
		<div><% if post.user.profile_image? %>
				<%= image_tag post.user.profile_image.url, size: "100x100" %>
			<% else %>
				<div class="user-no-profile">
					<i class="fas fa-user-circle fa-5x"></i>
				</div>
			<% end %>
			<%= post.user.nickname %>
		</div>

		<div><%= link_to post.title, post_path(post.id) %><br>
			<%= post.tag.tag_name %></div>

		<div><%= link_to post_path(post.id) do %>
				<%= image_tag post.image.url, size: "200x150" %>
			<% end %>
		</div>

		<div><%= post.body %></div>

		<div>
			<% if user_signed_in? %>
				<% if post.liked_by?(current_user) %>
					<i class="fa fa-heart" aria-hidden= "true" style="color: red;"></i>
						<%= post.likes.count %>
				<% else %>
					<i class="fa fa-heart" aria-hidden= "true"></i>
						<%= post.likes.count %>
				<% end %>
			<% else %>
					<i class="fa fa-heart" aria-hidden= "true"></i>
						<%= post.likes.count %>
			<% end %>
			<br>
			<i class="far fa-comment-dots"></i> <%= post.post_comments.count %>
		</div>
	</div>
<% end %>

